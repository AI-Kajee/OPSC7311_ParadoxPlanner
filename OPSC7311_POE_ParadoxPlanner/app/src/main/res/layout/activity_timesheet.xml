<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/categoryback"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".TimesheetActivity">

    <EditText
        android:id="@+id/timesheetNameEditText"
        android:textColor="#F6E9E9"
        android:textColorHint="#B5AEAE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />

    <EditText
        android:id="@+id/startTimeEditText"
        android:textColor="#F6E9E9"
        android:textColorHint="#B5AEAE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Time" />

    <EditText
        android:id="@+id/endTimeEditText"
        android:textColor="#F6E9E9"
        android:textColorHint="#B5AEAE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Time" />

    <EditText
        android:id="@+id/startDateEditText"
        android:textColor="#F6E9E9"
        android:textColorHint="#B5AEAE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Date" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:textColor="#F6E9E9"
        android:textColorHint="#B5AEAE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:textColor="#F6E9E9"
        android:textColorHint="#B5AEAE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description" />

    <ImageView
        android:id="@+id/pictureImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="8dp"
        android:src="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/btnUploadPicture"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_upload"
        android:text="Upload Picture" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Timesheet Entry" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSave" />

</LinearLayout>